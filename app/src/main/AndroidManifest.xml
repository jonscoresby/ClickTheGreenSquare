        <activity
            android:name=".WinScreen"
            android:label="@string/title_activity_win_screen" >
        </activity>
        <activity
            android:name=".StartScreen"
            android:label="@string/title_activity_start_screen" >
        </activity>
        <activity
            android:name=".GameRun"
            android:label="@string/title_activity_game_run"
            android:theme="@style/noAnimTheme">
        </activity>
    </application>

</manifest>
